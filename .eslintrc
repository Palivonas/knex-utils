{
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "arrow-body-style": "off",
    "comma-dangle": 0,
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ],
    "max-len": [
      "error",
      120
    ]
  }
}
